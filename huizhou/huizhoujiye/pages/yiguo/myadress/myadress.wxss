/* pages/entryform/entryform.wxss */
.title {
top: 0px;
height: 100rpx;
width: 100%;
text-align: center;
}
.tittxt {
  font-size: 13px;
  font-weight: bold;
  line-height: 100rpx;
}
.goods{
  height: 200rpx;
  width: 100%;
  border-bottom: solid 8px #eee;
  border-top: solid 2rpx #eee;
}
.pic{
  float: left;
  height: 200rpx;
  width: 200rpx;
  text-align: center;
  display: inline;
}
.imagpic {
  width: 80%;
  height: 80%;
  margin-top: 20rpx;
}
.goodsdetail{
  float: right;
  height: 200rpx;
  width: 60%;
}
.goodname{
  display: block;
  height: 120rpx;
  width: 100%;
  font-size: 13px;
  padding-top: 20rpx;
}
.goodprice{
  display: block;
  height: 130rpx;
  width: 100%;
  font-size: 20px;
  color: red;
}

.package{
  height: 150rpx;
  width: 100%;
  border-bottom: solid 8px #eee;
}
.one{
  border-bottom: solid 2rpx #eee;
  width: 100%;
  height: 75rpx;
}
.patxt{
  float: left;
  width: 30%;
  font-size: 13px;
  line-height: 75rpx;
  margin-left: 20rpx;
}
.pactxt{
  float: right;
  width: 50%;
  font-size: 14px;
  line-height: 75rpx;
  text-align: left;
  color: red;
}
.form {
  font-size: 15px;
  width: 100%;
  height: 100rpx;
  border-bottom: solid 4rpx #eee 
}
.form_txt {
  float: left;
  font-size: 14px;
  width: 30%;
  margin-left: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.form_input {
  float: right;
  height: 100rpx;
  width: 60%;
  line-height: 100rpx;
}
.put_form {
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 120rpx;
}
.put_btn{
  border-radius: 0px;
  height: 100%;
  width: 100%;
  font-size: 25px;
  color: white;
  background-color: red;
  line-height: 120rpx;
  font-weight: bolder;
}